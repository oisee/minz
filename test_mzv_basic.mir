; Basic MIR test for MZV - using correct syntax
; Tests fundamental operations

module basic_test

func main() -> i32 {
entry:
    ; Load constants
    %a = const 15
    %b = const 25
    
    ; Basic arithmetic
    %sum = add %a, %b        ; 15 + 25 = 40
    %diff = sub %sum, %b     ; 40 - 25 = 15
    %prod = mul %diff, 2     ; 15 * 2 = 30
    
    ; Test string handling
    %str_id = string "Hello MZV!"
    emit "// Generated by MZV test"
    emit "fun test_generated() -> void { print_u8(30); }"
    
    ret %prod  ; Should return 30
}