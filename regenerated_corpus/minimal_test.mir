; MinZ Intermediate Representation (MIR)
; Module: main

Function examples.minimal_test.add$u16$u16(a: u16, b: u16) -> u16
  @smc
  Instructions:
      0: LOAD_PARAM
      1: LOAD_PARAM
      2: r5 = r3 + r4
      3: return r5

Function examples.minimal_test.test_arithmetic() -> void
  @smc
  Locals:
    r1 = x: u16
    r3 = y: u16
    r5 = result: u16
  Instructions:
      0: r2 = 10
      1: store x, r2
      2: r4 = 20
      3: store y, r4
      4: r6 = load x
      5: r7 = load y
      6: r8 = load x
      7: r9 = load y
      8: PATCH_TEMPLATE
      9: PATCH_TARGET
     10: PATCH_PARAM
     11: PATCH_PARAM
     12: r10 = call examples.minimal_test.add$u16$u16
     13: store result, r10
     14: return

Function examples.minimal_test.test_struct() -> void
  @smc
  Locals:
    r1 = p: u16
    r5 = sum: u16
  Instructions:
      0: ALLOC ; Allocate struct Point
      1: r3 = 100
      2: STORE_FIELD ; Store to Point.x
      3: r4 = 200
      4: STORE_FIELD ; Store to Point.y
      5: store p, r2
      6: r6 = load p
      7: LOAD_FIELD ; Load field x (offset 0)
      8: r8 = load p
      9: LOAD_FIELD ; Load field y (offset 2)
     10: r10 = r7 + r9
     11: store sum, r10
     12: return

Function examples.minimal_test.test_array() -> void
  @smc
  Locals:
    r1 = arr: [3]u8
    r16 = first: u16
  Instructions:
      0: r3 = 1
      1: r4 = 2
      2: r5 = 3
      3: ARRAY_INIT ; Array initializer with 3 elements
      4: ARRAY_ELEMENT ; Initialize array[0]
      5: ARRAY_ELEMENT ; Initialize array[1]
      6: ARRAY_ELEMENT ; Initialize array[2]
      7: r6 = 1
      8: r7 = load arr ; Load array arr base address
      9: STORE_INDEX ; Store element 0
     10: r8 = 2
     11: r9 = load arr ; Load array arr base address
     12: r10 = 1
     13: r11 = r9 + r10
     14: STORE_DIRECT ; Store element 1
     15: r12 = 3
     16: r13 = load arr ; Load array arr base address
     17: r14 = 2
     18: r15 = r13 + r14
     19: STORE_DIRECT ; Store element 2
     20: r17 = load arr
     21: r18 = 0
     22: LOAD_INDEX ; Load array element (u8)
     23: store first, r19
     24: return

Function examples.minimal_test.main() -> void
  @smc
  Instructions:
      0: r1 = call examples.minimal_test.test_arithmetic
      1: r2 = call examples.minimal_test.test_struct
      2: r3 = call examples.minimal_test.test_array
      3: return

