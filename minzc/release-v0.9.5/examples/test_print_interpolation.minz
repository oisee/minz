// Test @print with string interpolation

fun main() -> void {
    let x: u8 = 42;
    let y: u16 = 1000;
    let name_ptr: *u8 = "Alice";
    
    // Simple interpolation
    @print("Hello, world!");
    
    // Variable interpolation
    @print("The value of x is {x}");
    @print("x = {x}, y = {y}");
    
    // Complex expressions
    @print("x + 10 = {x + 10}");
    @print("Double of x is {x * 2}");
    
    // String interpolation
    @print("Hello, {name_ptr}!");
    
    // Multiple values on one line
    @print("Player at ({x}, {y}) - Name: {name_ptr}");
    
    // Escape braces with double braces
    @print("Use {{braces}} to show literal braces");
    
    return;
}