// Test for String and LString types

fun test_short_string() -> void {
    // String (u8 length, max 255 chars)
    let name: String = "Hello, World!";
    let message: String = "This is a short string";
    
    print_string(name);
    print_string(message);
}

fun test_long_string() -> void {
    // LString (u16 length, max 65535 chars)
    let article: LString = l"This is a long string that could potentially be much longer than 255 characters if needed. It uses a u16 for length storage.";
    let book: LString = l"A very long text that might contain an entire book chapter or document.";
    
    print_string(article);
    print_string(book);
}

fun test_auto_promotion() -> void {
    // Should automatically become LString if > 255 chars
    let long_auto = "123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345";
    
    print_string(long_auto);
}

fun main() -> void {
    test_short_string();
    test_long_string(); 
    test_auto_promotion();
}