// String Operations Example
fun str_length(str: *u8) -> u16 {
    let len: u16 = 0;
    while *str != 0 {
        len = len + 1;
        str = str + 1;
    }
    return len;
}

fun str_copy(dest: *u8, src: *u8) -> void {
    while *src != 0 {
        *dest = *src;
        dest = dest + 1;
        src = src + 1;
    }
    *dest = 0;
}

fun main() {
    let buffer: [100]u8;
    str_copy(&buffer[0], "Hello MinZ");
}