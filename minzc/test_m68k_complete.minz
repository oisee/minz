fun add(a: u8, b: u8) -> u8 {
    return a + b
}

fun multiply(a: u8, b: u8) -> u8 {
    return a * b
}

fun is_even(n: u8) -> bool {
    return (n & 1) == 0
}

fun factorial(n: u8) -> u8 {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

