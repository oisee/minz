// Test cast interface syntax parsing
interface Drawable {
    cast<Shape> {
        Circle -> { 
            radius: self.radius,
            x: self.x,
            y: self.y 
        }
        Rectangle -> { 
            width: self.width, 
            height: self.height,
            x: self.pos_x,
            y: self.pos_y 
        }
        auto -> { value: self }
    }
    
    fun draw(x: u8, y: u8) -> void;
    fun get_area() -> u16;
}

// Test conditional casting
interface Numeric {
    cast<T> where T: {u8, u16, i8, i16} {
        auto -> { value: self }
    }
    
    fun add(other: Self) -> Self;
}