// Test 16-bit arithmetic operations
module test_16bit_arithmetic;

global u16 g_sum;
global u16 g_diff;
global u16 g_product;

fun test_16bit_ops() -> void {
    let u16 a = 0x1234;
    let u16 b = 0x5678;
    
    // Test addition
    g_sum = a + b;  // Should be 0x68AC
    
    // Test subtraction
    g_diff = b - a;  // Should be 0x4444
    
    // Test multiplication (16x16->16)
    let u16 c = 100;
    let u16 d = 200;
    g_product = c * d;  // Should be 20000 (0x4E20)
    
    // Test bit operations on 16-bit values
    let u16 mask = 0xFF00;
    let u16 result = b & mask;  // Should be 0x5600
    
    // Test shifts on 16-bit
    let u16 shifted = a << 4;  // Should be 0x2340 (but truncated to 16-bit)
}

fun main() -> void {
    test_16bit_ops();
}