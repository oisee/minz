// Test Lua blocks with triple brackets

// Define a Lua function in a block
@lua[[[
function double(x)
    return x * 2
end

function triple(x) 
    return x * 3
end

-- We can even use Lua multiline strings inside!
description = [[This is a multiline
string inside a Lua block]]
]]]

// Use the Lua functions in constants
const DOUBLED_10: u8 = @lua(double(10))
const TRIPLED_5: u8 = @lua(triple(5))

fun main() -> void {
    let x = DOUBLED_10;  // 20
    let y = TRIPLED_5;   // 15
    return;
}