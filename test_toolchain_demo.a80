; MinZ Complete Toolchain Demo
; Demonstrates character literals and system call interception
ORG $8000

DEMO:
    ; Print "MinZ!" using character literals
    LD A, 'M'
    RST $10
    LD A, 'i'  
    RST $10
    LD A, 'n'
    RST $10
    LD A, 'Z'
    RST $10
    LD A, '!'
    RST $10
    LD A, 13        ; CR
    RST $10
    
    ; Show hex format support
    LD A, $48       ; 'H' in hex
    RST $10
    LD A, #65       ; 'A' in alternate hex  
    RST $10
    LD A, 0x4C      ; 'L' in C-style hex
    RST $10
    LD A, 0x54      ; 'T' in C-style hex
    RST $10
    LD A, 13        ; CR
    RST $10
    
    ; Proper program termination
    DI              ; Disable interrupts  
    HALT            ; Halt CPU

END