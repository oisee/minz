; MinZ Intermediate Representation (MIR)
; Module: main

Function test_casting_simple.main() -> void
  Locals:
    r1 = small: u8
    r3 = big: u16
    r6 = large: u16
    r8 = truncated: u8
    r11 = a: u8
    r13 = b: u16
    r15 = sum: u16
  Instructions:
      0: r2 = 42
      1: store small, r2
      2: r4 = load small
      3: store big, r4
      4: LOAD_STRING
      5: PRINT_STRING ; Print "Implicit widening u8 to u16: OK" (31 chars via loop)
      6: r7 = 300
      7: store large, r7
      8: r9 = load large
      9: store truncated, r9
     10: LOAD_STRING
     11: PRINT_STRING ; Print "Explicit narrowing u16 to u8: OK" (32 chars via loop)
     12: r12 = 100
     13: store a, r12
     14: r14 = 1000
     15: store b, r14
     16: r16 = load b
     17: r17 = load a
     18: r18 = r16 + r17
     19: store sum, r18
     20: LOAD_STRING
     21: PRINT_STRING ; Print "Mixed arithmetic with widening: OK" (34 chars via loop)
     22: r20 = load sum
     23: r0 = call print_u16_decimal ; Call runtime print_u16_decimal
     24: return

